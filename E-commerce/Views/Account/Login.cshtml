@model E_commerce.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="hero py-12 container mx-auto grid place-items-center">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-lg shadow-md">
            <div class="p-6">
                <h2 class="mb-6 text-center text-2xl font-semibold">Login</h2>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                    <div class="mb-4">
                        <label asp-for="Username" class="text-gray-700 block text-sm font-medium">Username</label>
                        <input asp-for="Username" class="mt-1 indent-4 border-gray-300 h-10 block w-full rounded-md border shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="text-gray-700 block text-sm font-medium">Password</label>
                        <input asp-for="Password" type="password" class="indent-4 mt-1 border-gray-300 h-10 block w-full rounded-md border shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="space-y-3">
                        <button type="submit" class="bg-blue-600 text-white py-2 px-4 w-full rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500">
                            Login
                        </button>
                        <a asp-controller="Account" asp-action="SignUp" class="bg-gray-100 text-gray-800 py-2 px-4 block w-full rounded-md text-center hover:bg-gray-200">
                            Don't have an account? Sign Up
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}